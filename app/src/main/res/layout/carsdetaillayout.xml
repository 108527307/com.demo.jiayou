<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <Toolbar
            style="@style/Toolbar">

            <Button
                android:id="@+id/back"
                android:layout_width="50.0dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/csy_arr_back"
                android:drawablePadding="5.0dip"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="14.0sp"
                android:text="返回"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汽车信息"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal" />
        </Toolbar>

        <ScrollView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp" >

                    <ImageView
                        android:id="@+id/gasimage"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/carimage" />

                    <TextView
                        android:id="@+id/carid"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignRight="@+id/gasimage"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="26dp"
                        android:text="textname"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="品牌："
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/carbrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/csy_textbox1"
                        android:layout_alignBaseline="@+id/text1"
                        android:layout_alignBottom="@+id/text1"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="name"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/text0"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="车架号："
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/VIN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/text0"
                        android:layout_alignBottom="@+id/text0"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="name"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="汽车类型："
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/carclass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/text2"
                        android:layout_alignBottom="@+id/text2"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="name"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="引擎号："
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/engineid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/text3"
                        android:layout_alignBottom="@+id/text3"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="name"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="里程数"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/text4"
                        android:layout_alignBottom="@+id/text4"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="name"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="剩余油量"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/flue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/text5"
                        android:layout_alignBottom="@+id/text5"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="name"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="车身级别"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/bodylevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/text6"
                        android:layout_alignBottom="@+id/text6"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="name"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="引擎状况"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/engine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/text7"
                        android:layout_alignBottom="@+id/text7"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="name"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/text8"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="减速装置"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/trsanmission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/text8"
                        android:layout_alignBottom="@+id/text8"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="name"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/text9"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="大灯状况"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/carheadlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/text9"
                        android:layout_alignBottom="@+id/text9"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="name"
                        android:textSize="12sp" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_below="@id/cx_form"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/csy_pd"
                    android:layout_marginRight="@dimen/csy_pd">

                    <Button
                        android:id="@+id/find"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/csy_btn_h"
                        android:layout_marginBottom="@dimen/csy_pd"
                        android:background="@drawable/csy_btn"
                        android:gravity="center"
                        android:text="违章查询"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/csy_text_ts" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ListView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
    </LinearLayout>
</LinearLayout>